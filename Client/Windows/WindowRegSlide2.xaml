<UserControl x:Class="Client.Windows.WindowRegSlide2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Client.Windows"
             mc:Ignorable="d" 
             Foreground="{StaticResource AppColor}"
             d:DesignHeight="450" d:DesignWidth="880">
    <Grid
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
        <StackPanel>
            <TextBox
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MaxWidth="250"
                MinWidth="250"
                FontSize="18"
                Margin="0,10,0,10"
                Text="{Binding Email}"
                materialDesign:HintAssist.Hint="邮箱地址"/>
            <WrapPanel
                HorizontalAlignment="Center"
                Margin="0,10,0,10">
                <TextBox
                    Style="{StaticResource MaterialDesignTextFieldBoxTextBox}"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    MaxWidth="250"
                    MinWidth="160"
                    FontSize="18"
                    Name="tbVCode"
                    Text="{Binding VCode}"
                    materialDesign:HintAssist.Hint="验证码"/>
                <Button
                    Style="{StaticResource MenuButton}"
                    Content="获取验证码"
                    FontSize="15"
                    Width="87"
                    Height="22"
                    Command="{Binding VCodeGetCommand}"/>
            </WrapPanel>
            <WrapPanel
                HorizontalAlignment="Center"
                Margin="0,0,0,10">
                <Button
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    Command="{x:Static materialDesign:Transitioner.MoveNextCommand}">
                    <materialDesign:PackIcon Kind="StepForward" />
                </Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
