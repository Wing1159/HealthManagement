<UserControl x:Class="Client.Windows.WindowBody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Windows"
             xmlns:controls="clr-namespace:DMSkin.WPF.Controls;assembly=DMSkin.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <TabControl
                Grid.Row="1"
                Background="Transparent"
                Style="{StaticResource DMTopTabControl}">
            <controls:DMTabItem
                Height="35"
                Header="基本信息"
                SelectForeground="White"
                SelectedColor="#FF1E9FFF"
                TabItemType="Left">
                <!-- 姓名，性别，出生日期，职业，身高，体重， -->
                <StackPanel>
                    <controls:DMTextBox
                        Width="150"
                        Height="40"
                        Margin="5,15,5,15"
                        CornerRadius="2"
                        Icon="{StaticResource Icon_Safe}"
                        Hint="姓名" />
                    <WrapPanel HorizontalAlignment="Center">
                        <Label Content="性别" />
                        <controls:DMRadioButton
                            VerticalAlignment="Center"
                            HorizontalAlignment ="Center"
                            Content="男"
                            IconColor="#FF1E9FFF"
                            IsChecked="True" />
                        <controls:DMRadioButton
                            VerticalAlignment="Center"
                            HorizontalAlignment ="Center"
                            Content="女"
                            IconColor="#FF1E9FFF" />
                    </WrapPanel>
                    <DatePicker 
                        x:Name="datePickerCtl"
                        Width="200"
                        Height="25"
                        SelectedDateFormat="Short"
                        FirstDayOfWeek="Monday"
                        DisplayDateStart="1910/4/1"
                        DisplayDateEnd= ""
                        IsTodayHighlighted="False">
                        <DatePicker.BlackoutDates>
                            <CalendarDateRange Start="1910/4/1" End=""/>
                            <CalendarDateRange Start="1910/4/1" End=""/>
                        </DatePicker.BlackoutDates>
                    </DatePicker>
                    <controls:DMTextBox
                        Width="150"
                        Height="40"
                        Margin="0,15,0,15"
                        CornerRadius="2"
                        Hint="职业" />
                    <controls:DMTextBox
                        Width="150"
                        Height="40"
                        Margin="5,15,5,15"
                        CornerRadius="2"
                        Hint="身高" />
                    <controls:DMTextBox
                        Width="150"
                        Height="40"
                        Margin="5,15,5,15"
                        CornerRadius="2"
                        Hint="体重" />
                </StackPanel>
            </controls:DMTabItem>
            <controls:DMTabItem
                Height="35"
                Header="详细信息"
                SelectForeground="White"
                SelectedColor="#FF1E9FFF"
                TabItemType="Right">

            </controls:DMTabItem>
        </TabControl>
    </Grid>
</UserControl>
